{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "build",
		"rootDir": "./",
		"strict": true,
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"resolveJsonModule": true
	},
	"exclude": ["build", "node_modules"]
}
